# Variables de entorno para el Backend
PORT=5000
NODE_ENV=development

# Configuración del frontend (CORS)
FRONTEND_URL=http://localhost:3000

# Configuración de la base de datos
DB_HOST=db
DB_USER=appuser       # Cambiado de root a appuser
DB_PASSWORD=apppassword  # Cambiado a la contraseña en docker-compose
DB_NAME=appdb
DB_SSL=false

# Seguridad (JWT y rate limit)
JWT_SECRET=clave_generada_segura_de_64_bytes
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_MAX=5

# Logs
LOG_LEVEL=info